# Configuration locale pour AWEMA Studio v2
# Copier ce fichier en .env.local et remplir les valeurs

# Supabase Configuration (pour le CMS multi-tenant)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# API Keys pour les services
# Claude API (optionnel - pour la génération de contenu IA)
CLAUDE_API_KEY=sk-ant-api...

# Google Analytics (optionnel)
NEXT_PUBLIC_GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager (optionnel)
NEXT_PUBLIC_GTM_CONTAINER_ID=GTM-XXXXXXX

# Netlify (pour le déploiement automatique)
NETLIFY_AUTH_TOKEN=nfp_XXXXXXXXXX

# Configuration du serveur de développement
PORT=3000

# Mode de développement
NODE_ENV=development

# URL de base (pour le développement local)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Configuration CMS par défaut
DEFAULT_CMS_ADMIN_EMAIL=admin@awema.fr
DEFAULT_CMS_ADMIN_PASSWORD=AwemaAdmin2024!

# Plans et tarification
STARTER_PRICE=297
PRO_PRICE=497
PREMIUM_PRICE=797
STARTER_MONTHLY=19
PRO_MONTHLY=39
PREMIUM_MONTHLY=59

# Limites des plans
STARTER_MAX_PAGES=10
PRO_MAX_PAGES=50
PREMIUM_MAX_PAGES=999
STARTER_MAX_MEDIA_MB=50
PRO_MAX_MEDIA_MB=500
PREMIUM_MAX_MEDIA_MB=5000

# Support et contact
SUPPORT_EMAIL=support@awema.fr
SALES_EMAIL=contact@awema.fr

# Features flags
ENABLE_AI_CONTENT_GENERATION=true
ENABLE_ADVANCED_SEO=true
ENABLE_ANALYTICS=true
ENABLE_CMS=true
ENABLE_MULTI_TENANT=true

# Sécurité
SESSION_SECRET=your-super-secret-session-key-change-this
JWT_SECRET=your-super-secret-jwt-key-change-this

# Stripe (pour les paiements - futur)
# STRIPE_PUBLIC_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...

# Emails (pour les notifications - futur)
# SMTP_HOST=smtp.gmail.com
