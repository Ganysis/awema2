# Database
# For PostgreSQL (recommended for production)
DATABASE_URL="postgresql://username:password@localhost:5432/awema_studio?schema=public"

# For SQLite (for development)
# DATABASE_URL="file:./dev.db"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
BCRYPT_ROUNDS=10

# Session
SESSION_EXPIRY_HOURS=24

# CMS
CMS_PASSWORD="your-cms-password"

# Media Upload
UPLOAD_MAX_SIZE_MB=10
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/webp,image/gif"

# Email (for lead notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="AWEMA Studio <noreply@awema.fr>"
EMAIL_ADMIN="admin@awema.fr"

# Analytics
GOOGLE_ANALYTICS_API_KEY=""

# Claude AI API (Optionnel - pour la génération de contenu IA)
# Obtenez votre clé sur https://console.anthropic.com
ANTHROPIC_API_KEY=""

# Google Analytics 4 (Optionnel - pour le tracking)
# Format: G-XXXXXXXXXX
GA4_MEASUREMENT_ID=""

# Google Tag Manager (Optionnel)
# Format: GTM-XXXXXXX
GTM_CONTAINER_ID=""

# Storage (for media files)
# Local storage
STORAGE_TYPE="local"
STORAGE_PATH="./uploads"

# S3 storage (optional)
# STORAGE_TYPE="s3"
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""
# AWS_REGION="eu-west-1"
# AWS_BUCKET_NAME="awema-studio"

# Application
NODE_ENV="development"
PORT=3000
APP_URL="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"  # error, warn, info, debug