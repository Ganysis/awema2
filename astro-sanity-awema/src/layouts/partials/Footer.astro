---
import config from "@/config/config.json";
import menu from "@/config/menu.json";
import Logo from "@/components/Logo.astro";

const { footer } = menu;
const { contact } = config;
const currentYear = new Date().getFullYear();
---

<footer class="bg-white border-t">
  <!-- CTA Contact Section -->
  <section class="bg-gradient-to-br from-gray-800 via-gray-900 to-gray-800 text-white py-12">
    <div class="container">
      <div class="row justify-center">
        <div class="lg:col-8">
          <div class="text-center">
            <h3 class="text-3xl font-bold mb-4 text-white">
              Une question ? Un projet ?
            </h3>
            <p class="text-lg mb-6 text-white">
              Parlons-en autour d'un café (ou en visio)
            </p>

            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-6">
              <a href={`tel:${contact.phone_link}`} class="flex items-center gap-2 text-xl font-semibold hover:text-cyan-400 transition">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                </svg>
                {contact.phone}
              </a>
              <span class="hidden sm:inline text-gray-400">•</span>
              <a href={`mailto:${contact.email}`} class="flex items-center gap-2 text-lg hover:text-cyan-400 transition">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                  <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                </svg>
                {contact.email}
              </a>
            </div>

            <a href="/contact" class="inline-block px-8 py-4 bg-gradient-to-r from-blue-500 to-cyan-500 hover:from-blue-600 hover:to-cyan-600 text-white rounded-lg font-bold transition-all hover:scale-105 shadow-lg text-lg">
              Prendre RDV
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Footer -->
  <div class="container py-12">
    <div class="row g-4">
      <!-- Column 1: About -->
      <div class="lg:col-3 md:col-6">
        <Logo />
        <p class="mt-4 text-sm text-gray-600">
          Sites web performants pour TPE, PME et artisans. Génération de leads garantie.
        </p>
        <div class="flex gap-2 mt-4">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
            ⭐ 4.9/5
          </span>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
            +300 sites
          </span>
        </div>
      </div>

      <!-- Column 2: Menu Principal -->
      <div class="lg:col-3 md:col-6">
        <h4 class="font-bold mb-4">Navigation</h4>
        <ul class="space-y-2">
          <li><a href="/" class="text-gray-600 hover:text-primary transition">Accueil</a></li>
          <li><a href="/tarifs" class="text-gray-600 hover:text-primary transition">Nos Formules</a></li>
          <li><a href="/realisations" class="text-gray-600 hover:text-primary transition">Réalisations</a></li>
          <li><a href="/mon-histoire" class="text-gray-600 hover:text-primary transition">Mon Histoire</a></li>
          <li><a href="/blog" class="text-gray-600 hover:text-primary transition">Blog</a></li>
          <li><a href="/contact" class="text-gray-600 hover:text-primary transition">Contact</a></li>
        </ul>
      </div>

      <!-- Column 3: Services Métiers -->
      <div class="lg:col-3 md:col-6">
        <h4 class="font-bold mb-4">Sites par Métier</h4>
        <ul class="space-y-2">
          <li><a href="/site-internet-plombier-aix" class="text-gray-600 hover:text-primary transition">Site Plombier</a></li>
          <li><a href="/site-internet-electricien-marseille" class="text-gray-600 hover:text-primary transition">Site Électricien</a></li>
          <li><a href="/site-internet-menuisier-aix" class="text-gray-600 hover:text-primary transition">Site Menuisier</a></li>
          <li><a href="/site-internet-macon-marseille" class="text-gray-600 hover:text-primary transition">Site Maçon</a></li>
          <li><a href="/site-internet-paysagiste-aix" class="text-gray-600 hover:text-primary transition">Site Paysagiste</a></li>
          <li><a href="/site-internet-carreleur-aix" class="text-gray-600 hover:text-primary transition">Site Carreleur</a></li>
        </ul>
      </div>

      <!-- Column 4: Contact & Garanties -->
      <div class="lg:col-3 md:col-6">
        <h4 class="font-bold mb-4">Contact & Support</h4>
        <ul class="space-y-3">
          <li class="flex items-center gap-2">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <a href={`tel:${contact.phone_link}`} class="font-semibold hover:text-primary">{contact.phone}</a>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <a href={`mailto:${contact.email}`} class="hover:text-primary">{contact.email}</a>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.149-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
            </svg>
            <a href={`https://wa.me/33${contact.phone_link}`} target="_blank" class="hover:text-primary">WhatsApp</a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t mt-8 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <div class="text-center md:text-left">
          <p class="text-sm text-gray-600">
            © {currentYear} AWEMA - Sites web qui convertent
          </p>
          <p class="text-xs text-gray-500 mt-1">
            Solutions digitales pour TPE & PME
          </p>
        </div>

        <div class="flex gap-4">
          <a href="/mentions-legales" class="text-xs text-gray-500 hover:text-primary">Mentions légales</a>
          <a href="/cgv" class="text-xs text-gray-500 hover:text-primary">CGV</a>
          <a href="/pages/privacy-policy" class="text-xs text-gray-500 hover:text-primary">Confidentialité</a>
        </div>

      </div>
    </div>
  </div>
</footer>