---
import config from "@/config/config.json";
const { contact } = config;
---

<!-- Bouton d'appel mobile fixe (visible uniquement sur mobile) -->
<a
  href={`tel:${contact.phone_link}`}
  aria-label="Appeler AWEMA"
  class="md:hidden fixed bottom-6 right-4 bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white p-4 rounded-full shadow-2xl z-[100] transition-all duration-300 hover:scale-110 flex items-center justify-center group"
  id="mobile-call-button"
>
  <!-- Icône téléphone -->
  <svg
    class="w-6 h-6 group-hover:animate-pulse"
    fill="currentColor"
    viewBox="0 0 20 20"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"
    ></path>
  </svg>

  <!-- Badge avec numéro (visible au hover) -->
  <span
    class="absolute -top-12 right-0 bg-slate-800 text-white px-3 py-2 rounded-lg text-sm font-semibold whitespace-nowrap opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"
  >
    {contact.phone}
  </span>
</a>

<style>
  #mobile-call-button {
    animation: bounce-in 0.5s ease-out 1s both;
  }

  @keyframes bounce-in {
    0% {
      transform: scale(0);
      opacity: 0;
    }
    50% {
      transform: scale(1.1);
    }
    100% {
      transform: scale(1);
      opacity: 1;
    }
  }
</style>
