  <script>
    function calculerRentabilite() {
      // R√©cup√©ration des valeurs
      const heures = parseFloat(document.getElementById('heures').value) || 0;
      const tauxHoraire = parseFloat(document.getElementById('taux_horaire').value) || 0;
      const nbOuvriers = parseFloat(document.getElementById('nb_ouvriers').value) || 1;
      const chargesSociales = parseFloat(document.getElementById('charges_sociales').value) || 45;
      const materiaux = parseFloat(document.getElementById('materiaux').value) || 0;
      const margeFournisseur = parseFloat(document.getElementById('marge_fournisseur').value) || 30;
      const km = parseFloat(document.getElementById('km').value) || 0;
      const location = parseFloat(document.getElementById('location').value) || 0;
      const sousTraitance = parseFloat(document.getElementById('sous_traitance').value) || 0;
      const autresFrais = parseFloat(document.getElementById('autres_frais').value) || 0;
      const fraisGeneraux = parseFloat(document.getElementById('frais_generaux').value) || 15;
      const aleas = parseFloat(document.getElementById('aleas').value) || 10;
      const prixVente = parseFloat(document.getElementById('prix_vente').value) || 0;

      // Calculs
      const coutMO = heures * tauxHoraire * nbOuvriers * (1 + chargesSociales/100);
      const coutDeplacements = km * 0.60; // 0.60‚Ç¨/km
      const coutLocationST = location + sousTraitance + autresFrais;

      const sousTotal = coutMO + materiaux + coutDeplacements + coutLocationST;
      const coutFraisGen = sousTotal * (fraisGeneraux/100);
      const coutAleas = sousTotal * (aleas/100);
      const coutTotal = sousTotal + coutFraisGen + coutAleas;

      const margeBrute = prixVente - coutTotal;
      const margePourcent = (margeBrute / prixVente * 100);
      const rentabiliteHoraire = margeBrute / (heures * nbOuvriers);

      // Affichage temps r√©el
      document.getElementById('cout_mo').textContent = coutMO.toFixed(0) + '‚Ç¨';
      document.getElementById('prix_materiaux').textContent = (materiaux * (1 + margeFournisseur/100)).toFixed(0) + '‚Ç¨';

      // Affichage r√©sultats
      document.getElementById('res_mo').textContent = coutMO.toFixed(0) + '‚Ç¨';
      document.getElementById('res_materiaux').textContent = materiaux.toFixed(0) + '‚Ç¨';
      document.getElementById('res_deplacements').textContent = coutDeplacements.toFixed(0) + '‚Ç¨';
      document.getElementById('res_location').textContent = coutLocationST.toFixed(0) + '‚Ç¨';
      document.getElementById('res_frais_gen').textContent = coutFraisGen.toFixed(0) + '‚Ç¨';
      document.getElementById('res_aleas').textContent = coutAleas.toFixed(0) + '‚Ç¨';
      document.getElementById('res_cout_total').textContent = coutTotal.toFixed(0) + '‚Ç¨';

      document.getElementById('res_marge_brute').textContent = margeBrute.toFixed(0) + '‚Ç¨';
      document.getElementById('res_marge_pourcent').textContent = margePourcent.toFixed(1) + '%';
      document.getElementById('res_prix_horaire').textContent = rentabiliteHoraire.toFixed(0) + '‚Ç¨/h';

      // Analyse et verdict
      const verdictDiv = document.getElementById('verdict');
      const analyseDiv = document.getElementById('analyse_rentabilite');
      const recoDiv = document.getElementById('recommandations');
      const prixConseilleDiv = document.getElementById('prix_conseille');

      if (margePourcent < 0) {
        verdictDiv.className = 'p-4 rounded-lg text-center font-semibold bg-red-100 text-red-700';
        verdictDiv.innerHTML = '‚ùå CHANTIER √Ä PERTE - REFUSER ABSOLUMENT';
        analyseDiv.className = 'rounded-lg p-6 bg-red-50 border-2 border-red-500';
      } else if (margePourcent < 20) {
        verdictDiv.className = 'p-4 rounded-lg text-center font-semibold bg-orange-100 text-orange-700';
        verdictDiv.innerHTML = '‚ö†Ô∏è RENTABILIT√â INSUFFISANTE - √Ä N√âGOCIER';
        analyseDiv.className = 'rounded-lg p-6 bg-orange-50 border-2 border-orange-500';
      } else if (margePourcent < 30) {
        verdictDiv.className = 'p-4 rounded-lg text-center font-semibold bg-yellow-100 text-yellow-700';
        verdictDiv.innerHTML = 'üòê RENTABILIT√â CORRECTE - PEUT MIEUX FAIRE';
        analyseDiv.className = 'rounded-lg p-6 bg-yellow-50 border-2 border-yellow-500';
      } else {
        verdictDiv.className = 'p-4 rounded-lg text-center font-semibold bg-green-100 text-green-700';
        verdictDiv.innerHTML = '‚úÖ EXCELLENTE RENTABILIT√â - √Ä ACCEPTER';
        analyseDiv.className = 'rounded-lg p-6 bg-green-50 border-2 border-green-500';
      }

      // Recommandations
      recoDiv.innerHTML = '';
      if (margePourcent < 30) {
        const prixMin = coutTotal * 1.3; // 30% de marge minimum
        const prixIdeal = coutTotal * 1.5; // 50% de marge id√©ale

        prixConseilleDiv.innerHTML = `
          <div class="text-lg">Prix minimum conseill√© : <span class="font-bold text-xl text-primary">${prixMin.toFixed(0)}‚Ç¨</span> (30% de marge)</div>
          <div class="text-lg">Prix id√©al : <span class="font-bold text-xl text-green-600">${prixIdeal.toFixed(0)}‚Ç¨</span> (50% de marge)</div>
          <div class="mt-3 text-sm text-gray-600">Soit une augmentation de ${(prixMin - prixVente).toFixed(0)}‚Ç¨ √† ${(prixIdeal - prixVente).toFixed(0)}‚Ç¨</div>
        `;

        if (coutMO / coutTotal > 0.6) {
          recoDiv.innerHTML += '<div>‚Ä¢ ‚ö†Ô∏è Main d\'≈ìuvre > 60% des co√ªts. Optimisez le temps ou augmentez vos tarifs.</div>';
        }
        if (materiaux / coutTotal > 0.5) {
          recoDiv.innerHTML += '<div>‚Ä¢ üì¶ Mat√©riaux > 50% des co√ªts. N√©gociez avec vos fournisseurs.</div>';
        }
        if (rentabiliteHoraire < 30) {
          recoDiv.innerHTML += '<div>‚Ä¢ ‚è∞ Rentabilit√© horaire faible. Visez minimum 40‚Ç¨/h de marge.</div>';
        }
      } else {
        prixConseilleDiv.innerHTML = '<div class="text-lg text-green-600">‚úÖ Votre prix est bien positionn√© !</div>';
      }

      // Afficher les r√©sultats
      document.getElementById('resultats').classList.remove('hidden');
      document.getElementById('resultats').scrollIntoView({ behavior: 'smooth' });
    }

    function nouvelleAnalyse() {
