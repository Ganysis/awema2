    // Sauvegarde locale
    const STORAGE_KEY = 'awema-checklist-entreprise';

    // Charger l'√©tat sauvegard√©
    window.addEventListener('DOMContentLoaded', () => {
      const saved = localStorage.getItem(STORAGE_KEY);
      if (saved) {
        const checkedItems = JSON.parse(saved);
        const checkboxes = document.querySelectorAll('input[type="checkbox"]');
        checkboxes.forEach((cb, index) => {
          if (checkedItems.includes(index)) {
            cb.checked = true;
          }
        });
        updateProgress();
      }
    });

    function updateProgress() {
      const checkboxes = document.querySelectorAll('input[type="checkbox"]');
      const checked = document.querySelectorAll('input[type="checkbox"]:checked');

      const total = checkboxes.length;
      const completed = checked.length;
      const percentage = Math.round((completed / total) * 100);

      document.getElementById('checkedCount').textContent = completed;
      document.getElementById('totalCount').textContent = total;
      document.getElementById('progression').textContent = percentage;
      document.getElementById('progressBar').style.width = percentage + '%';

      // Sauvegarder l'√©tat
      const checkedIndexes = [];
      checkboxes.forEach((cb, index) => {
        if (cb.checked) {
          checkedIndexes.push(index);
        }
      });
      localStorage.setItem(STORAGE_KEY, JSON.stringify(checkedIndexes));
    }

