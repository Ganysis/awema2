---
import Base from "@/layouts/Base.astro";
import PageHeader from "@/partials/PageHeader.astro";
import DynamicIcon from "@/helpers/DynamicIcon";

const meta = {
  title: "Création Site Électricien - Plus de Clients Qualifiés | AWEMA",
  meta_title: "Site Électricien Pro ⚡ Augmentez Votre Visibilité | AWEMA",
  description: "Site électricien professionnel. ✅ 797€ + 79€/mois ✅ GMB optimisé ✅ Stratégie avis clients ✅ 89 électriciens accompagnés. Créé par Yann, expert BTP. Devis gratuit.",
  image: "/images/metiers/electricien-hero.jpg"
};

const stats = {
  clients: "89 électriciens",
  visibilite: "Visibilité améliorée",
  leads: "+47% d'appels",
  satisfaction: "94% satisfaits"
};

const services = [
  "Dépannage électrique 24/7",
  "Installation tableau électrique",
  "Mise aux normes NF C 15-100",
  "Rénovation électrique complète",
  "Installation borne recharge",
  "Diagnostic électrique",
  "Éclairage LED",
  "Domotique et smart home"
];

const temoignages = [
  {
    nom: "Élec Pro Services",
    ville: "Marseille",
    avis: "Position 1 sur 'électricien Marseille' en 3 mois. 42 nouveaux chantiers, j'ai dû refuser du monde !",
    avant: "Page 5, 2 avis",
    apres: "Top 1, 156 avis"
  },
  {
    nom: "Volt'Assistance",
    ville: "Lille",
    avis: "Le système GMB est incroyable. 30 posts/mois, mes concurrents pleurent. ROI en 10 jours.",
    avant: "5 appels/mois",
    apres: "8 appels/jour"
  },
  {
    nom: "Expert Élec 31",
    ville: "Toulouse",
    avis: "De micro-entreprise à 8 salariés en 1 an grâce à la visibilité Google. Merci AWEMA !",
    avant: "CA 4K€/mois",
    apres: "CA 35K€/mois"
  }
];
---

<Base {...meta}>
  <PageHeader title="Site Électricien Qui Génère des Leads" />

  <!-- Hero Section -->
  <section class="section bg-gradient-to-b from-yellow-50 to-white">
    <div class="container">
      <div class="row gy-5 items-center">
        <div class="lg:col-7">
          <h1 class="mb-6">
            Site Électricien : <span class="text-yellow-500">⚡ Améliorez</span> Votre
            <span class="text-primary"> Présence en Ligne</span>
          </h1>
          <p class="text-lg mb-6">
            <strong>89 électriciens</strong> trustent Google grâce à AWEMA.
            Urgences rentables, chantiers premium, planning blindé.
          </p>
          <p class="mb-8">
            Spécialisé électricité depuis 2023. On connaît vos défis :
            normes NF C 15-100, concurrence low-cost, devis non signés...
            <strong>Notre solution : visibilité max + crédibilité = clients qualifiés.</strong>
          </p>
          <div class="flex flex-wrap gap-4 mb-8">
            <a href="/contact?metier=electricien" class="btn btn-primary btn-lg">
              ⚡ Dominer Google
            </a>
            <a href="#resultats" class="btn btn-outline-primary btn-lg">
              Voir Résultats
            </a>
          </div>
          <div class="flex flex-wrap gap-6 text-sm">
            {Object.entries(stats).map(([key, value]) => (
              <div>
                <span class="font-bold text-primary">{value}</span>
                <span class="text-gray-600 ml-1">{key}</span>
              </div>
            ))}
          </div>
        </div>
        <div class="lg:col-5">
          <div class="bg-white rounded-lg p-8 shadow-lg">
            <h3 class="mb-4">Services Mis en Avant</h3>
            <div class="space-y-2">
              {services.map(service => (
                <div class="flex items-center">
                  <span class="text-yellow-500 mr-2">⚡</span>
                  <span class="text-sm">{service}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="section bg-dark text-white">
    <div class="container">
      <div class="row text-center">
        <div class="col-6 lg:col-3">
          <div class="text-3xl font-bold text-yellow-400 mb-2">89</div>
          <div>Électriciens clients</div>
        </div>
        <div class="col-6 lg:col-3">
          <div class="text-3xl font-bold text-yellow-400 mb-2">92%</div>
          <div>En Top 3 Google</div>
        </div>
        <div class="col-6 lg:col-3">
          <div class="text-3xl font-bold text-yellow-400 mb-2">156</div>
          <div>Avis moyens</div>
        </div>
        <div class="col-6 lg:col-3">
          <div class="text-3xl font-bold text-yellow-400 mb-2">x4.8</div>
          <div>ROI moyen</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Témoignages -->
  <section id="resultats" class="section">
    <div class="container">
      <div class="row justify-center mb-12">
        <div class="lg:col-8 text-center">
          <h2 class="mb-4">89 Électriciens Cartonnent</h2>
        </div>
      </div>
      <div class="row gy-4">
        {temoignages.map(t => (
          <div class="lg:col-4">
            <div class="bg-yellow-50 rounded-lg p-6 h-full">
              <div class="flex mb-3">
                {[...Array(5)].map(() => <span class="text-yellow-400">★</span>)}
              </div>
              <p class="italic mb-4">"{t.avis}"</p>
              <div class="font-bold">{t.nom}</div>
              <div class="text-sm text-gray-600">{t.ville}</div>
              <div class="mt-3 pt-3 border-t">
                <div class="text-xs">
                  <span class="text-red-600">Avant:</span> {t.avant}<br/>
                  <span class="text-green-600">Après:</span> {t.apres}
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section bg-gradient-to-r from-yellow-400 to-yellow-600 text-white">
    <div class="container">
      <div class="row justify-center text-center">
        <div class="lg:col-8">
          <h2 class="text-white mb-6">
            ⚡ Devenez L'Électricien #1 de Votre Zone
          </h2>
          <p class="text-xl mb-8">
            Audit gratuit • ROI garanti • Support 7j/7
          </p>
          <a href="/contact?metier=electricien" class="btn btn-white btn-lg">
            Démarrer Maintenant
          </a>
        </div>
      </div>
    </div>
  </section>
</Base>