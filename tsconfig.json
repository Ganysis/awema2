{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "removeComments": true,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@awema/core": ["./packages/core/src"],
      "@awema/core/*": ["./packages/core/src/*"],
      "@awema/templates": ["./packages/templates/src"],
      "@awema/templates/*": ["./packages/templates/src/*"],
      "@awema/editor": ["./packages/editor/src"],
      "@awema/editor/*": ["./packages/editor/src/*"],
      "@awema/ai": ["./packages/ai/src"],
      "@awema/ai/*": ["./packages/ai/src/*"],
      "@awema/shared": ["./packages/shared/src"],
      "@awema/shared/*": ["./packages/shared/src/*"],
      "@awema/analytics": ["./packages/analytics/src"],
      "@awema/analytics/*": ["./packages/analytics/src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "dist",
    "**/dist",
    "build",
    "**/build",
    ".next",
    "**/.next",
    ".turbo",
    "**/.turbo"
  ]
}